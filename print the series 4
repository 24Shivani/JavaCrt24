import java.io.*;
import java.util.*;

public class Solution {
        
    public static void main(String[] args){
        Scanner s=new Scanner(System.in);
        int n;
        n=s.nextInt();
        if(n%2==0){
            System.out.println(n/2-1);
        }
        else{
            System.out.println(n-1);
        }
    }
} 
